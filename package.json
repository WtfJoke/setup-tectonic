{
  "name": "setup-tectonic",
  "version": "1.1.0",
  "private": true,
  "description": "Sets up Tectonic for Github Actions",
  "main": "lib/src/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "format": "npx biome format --write",
    "format-check": "npx biome format",
    "lint": "npx biome lint --write",
    "format+lint": "npx biome check --write",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "update-dist": "npm run build && npm run package",
    "all": "npm run build && npm run format+lint && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WtfJoke/setup-tectonic"
  },
  "keywords": [
    "actions",
    "tectonic",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.11.1",
    "@actions/github": "6.0.1",
    "@actions/io": "1.1.3",
    "@actions/tool-cache": "2.0.2",
    "semver": "7.7.3"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.5",
    "@octokit/types": "15.0.0",
    "@types/node": "24.7.2",
    "@types/semver": "7.7.1",
    "@vercel/ncc": "0.38.4",
    "@vitest/coverage-v8": "3.2.4",
    "js-yaml": "4.1.0",
    "typescript": "5.9.3",
    "vitest": "3.2.4",
    "webpack": "5.102.1"
  }
}
