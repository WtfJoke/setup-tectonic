{
  "name": "setup-tectonic",
  "version": "1.1.0",
  "private": true,
  "description": "Sets up Tectonic for Github Actions",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WtfJoke/setup-tectonic"
  },
  "keywords": [
    "actions",
    "tectonic",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/github": "^4.0.0",
    "@actions/io": "^1.0.2",
    "@actions/tool-cache": "^1.6.1",
    "semver": "^6.3.0",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@octokit/types": "^6.6.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.22",
    "@types/semver": "^7.3.4",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/parser": "^4.14.1",
    "@vercel/ncc": "^0.27.0",
    "eslint": "^7.18.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  }
}
